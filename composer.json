{
  "name": "mdo/mdo",
  "require": {
    "php": "^7.2",
    "ext-mysqli": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "codeception/codeception": "^3.1",
    "friendsofphp/php-cs-fixer": "^2.15",
    "phpstan/phpstan": "^0.11.19",
    "phpmd/phpmd": "^2.7",
    "captainhook/captainhook": "^4.5",
    "captainhook/plugin-composer": "^4.0"
  },
  "autoload": {
    "classmap": [
      "src"
    ]
  },
  "scripts": {
    "phpcs": "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix src --verbose",
    "phpstan": "php ./vendor/phpstan/phpstan/bin/phpstan analyse -l 7 src",
    "phpmd": "php ./vendor/phpmd/phpmd/src/bin/phpmd src text ruleset.xml",
    "phpunit": "php ./vendor/codeception/codeception/codecept run unit --ext DotReporter"
  }
}
